  }

  @UI.hidden: true
  DocUuid;

  @UI.hidden: true
  ObjectType;

  @UI:{ lineItem: [{ position: 10 , label: 'Contract No.' }] ,
        identification: [  { position: 10, label: 'Contract No.' , hidden: true  }] ,
        selectionField: [{ position: 10 }] }
  ObjectId;
  @UI:{ lineItem: [{ position: 20  }] ,
        identification: [{ position: 20 , qualifier: 'QHead'}] ,
        selectionField: [{ position: 20 }] }
  Title;
  @UI:{ lineItem: [ { position: 30 , label: 'Responsible buyer' , type: #AS_CONTACT , value: '_RespBuyer' } ] ,
      identification: [{ position: 30 , label: 'Responsible buyer' ,   qualifier: 'QHead'}] ,
      selectionField: [{ position: 30 }] }
  RespBuyer;
  //    RespBuyerName;
  @UI:{ lineItem: [{ position: 40 , label: 'Supplier' }] ,
     identification: [{ position: 40 ,label: 'Supplier'  , qualifier: 'QHead'}] ,
     selectionField: [{ position: 40 }] }
  Supplier;
  //    SupplierName;
  @UI:{ lineItem: [{ position: 50 , label: 'AVoB' }] ,
   identification: [{ position: 50 ,label: 'AVoB' ,  qualifier: 'QGenInfo'  }] }
