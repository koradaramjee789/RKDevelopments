@Metadata.layer: #CORE
@UI.headerInfo: {
    typeName: 'Purchase Contract',
    typeNamePlural: 'Purchase Contracts',
    title: {
        type: #STANDARD,
        label: 'Contract',
        value: 'ObjectId'
    },
    description.value: 'Title',
    description.type: #STANDARD
}
annotate view zrk_c_doc_head with
{

  @UI.facet: [ { id:              'Head',
                   purpose:         #STANDARD,
                   type:            #IDENTIFICATION_REFERENCE,
                   label:           'Header',
                   position:        10 ,
                   targetQualifier: 'QHead'},

               { id:              'GenInfo',
                   purpose:         #STANDARD,
                   type:            #IDENTIFICATION_REFERENCE,
                   label:           'General Information',
                   position:        20 ,
                   targetQualifier: 'QGenInfo'},

               { id:              'Plant',
                 purpose:         #STANDARD,
                 type:            #LINEITEM_REFERENCE,
                 label:           'Plants',
                 position:        30,
                 targetElement:   '_Plant'} ,

               { id:              'Items',
                 purpose:         #STANDARD,
                 type:            #LINEITEM_REFERENCE,
                 label:           'Items',
                 position:        40,
                 targetElement:   '_Items'}

                 ]

  @UI: {

  lineItem: [

  { type: #FOR_ACTION,  dataAction: 'ExtendDoc' , label: 'Extend' , position: 90} ,
    { type: #FOR_ACTION,  dataAction: 'ReleaseDoc' , label: 'Release' , position: 100}
